    "version": "0.2.0",
    "configurations": [
        {
            "name": "flutter_rpg (debug mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "program": "lib/main.dart",
            "cwd": "${workspaceFolder}",
            "args": [
                "--web-port=8000" // example of specifying a port
            ],
            "env": {
                "FLUTTER_WEB": "true" // specify if you are running a web app
            }
        },
        {
            "name": "flutter_rpg (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "flutter_rpg (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}